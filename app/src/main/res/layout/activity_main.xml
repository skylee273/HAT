<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="btcore.co.kr.hatsheal.MainActivity">

    <data>
        <variable
            name="MainActivity"
            type="btcore.co.kr.hatsheal.MainActivity"/>
    </data>


<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:background="@color/colorDefaultBackground"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="62dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="72"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_battery5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#06babd"
                android:text="BATTERY"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/btn_battery4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#06babd" />

            <Button
                android:id="@+id/btn_battery3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#06babd" />

            <Button
                android:id="@+id/btn_battery2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#06babd" />

            <Button
                android:id="@+id/btn_battery1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#06babd"
                android:textColor="#ffffff" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="407"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_mode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{MainActivity::onMode}"
                android:background="@drawable/button_mode" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="407"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_lamp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{MainActivity::onLamp}"
                android:background="@drawable/button_lamp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="404"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_lamp_ani"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{MainActivity::onLampAni}"
                android:background="@drawable/button_lamp_ani" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="412"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_sound"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{MainActivity::onSound}"
                android:background="@drawable/button_sound" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_disconnect"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="21dp"
        android:onClick="@{MainActivity::onDisconnect}"
        android:background="@drawable/menusetup_07"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_title"
        android:layout_width="153dp"
        android:layout_height="19dp"
        android:layout_marginTop="21dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_main" />

    <Button
        android:id="@+id/btn_menu"
        android:layout_width="24dp"
        android:layout_height="19dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="21dp"
        android:onClick="@{MainActivity::onSet}"
        android:background="@drawable/icon_menu"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
</layout>